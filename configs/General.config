# ==========================================
# 1. 核心机型设置 (Redmi AX6 专用)
# ==========================================
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y
CONFIG_TARGET_DEVICE_qualcommax_ipq807x_DEVICE_redmi_ax6=y
CONFIG_ATH11K_MEM_PROFILE_512M=y

# ==========================================
# 2. NSS 硬件加速 (主路由性能核心)
# ==========================================
# 启用 NSS 固件库
CONFIG_NSS_FIRMWARE_VERSION_11_4=y
# 启用 NSS 驱动与加速模块
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-sfe=y
# 启用 NSS 版本的 SQM (QoS流控)
CONFIG_PACKAGE_sqm-scripts-nss=y
CONFIG_PACKAGE_luci-app-sqm=y

# ==========================================
# 3. 基础系统与 IPv6
# ==========================================
CONFIG_DEVEL=y
CONFIG_TARGET_OPTIONS=y
CONFIG_TARGET_OPTIMIZATION="-O3 -pipe -march=armv8-a+crypto+crc -mcpu=cortex-a53+crypto+crc -mtune=cortex-a53"
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_IPV6=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y

# ==========================================
# 4. 关键插件 (OpenClash + UPnP + 监控)
# ==========================================
# OpenClash (含 Meta 内核，支持 Hysteria2)
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-openclash_INCLUDE_META=y

# UPnP (游戏/BT必备)
CONFIG_PACKAGE_luci-app-upnp=y

# CPU 频率与温度监控
CONFIG_PACKAGE_luci-app-cpufreq=y

# 基础工具 (终端、HTOP)
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano-full=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_ca-bundle=y

# ==========================================
# 5. 明确禁用不用的功能 (精简体积)
# ==========================================
# 禁用 文件共享 (Samba)
# CONFIG_PACKAGE_luci-app-samba4 is not set
# CONFIG_PACKAGE_autosamba is not set

# 禁用 下载工具 (Aria2/Transmission)
# CONFIG_PACKAGE_luci-app-aria2 is not set
# CONFIG_PACKAGE_luci-app-transmission is not set

# 禁用 磁盘管理
# CONFIG_PACKAGE_luci-app-diskman is not set
# CONFIG_PACKAGE_luci-app-hd-idle is not set

# 禁用 其他杂项 (FRP, 打印机, WOL, 定时重启, 微信推送等)
# CONFIG_PACKAGE_luci-app-frpc is not set
# CONFIG_PACKAGE_luci-app-frps is not set
# CONFIG_PACKAGE_luci-app-usb-printer is not set
# CONFIG_PACKAGE_luci-app-wolplus is not set
# CONFIG_PACKAGE_luci-app-autoreboot is not set
# CONFIG_PACKAGE_luci-app-wifischedule is not set
# CONFIG_PACKAGE_luci-app-wechatpush is not set
# CONFIG_PACKAGE_luci-app-watchcat is not set
# CONFIG_PACKAGE_luci-app-smartdns is not set

# 移除 Passwall (已替换为 OpenClash)
# CONFIG_PACKAGE_luci-app-passwall is not set
